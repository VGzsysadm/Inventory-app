{% block stylesheets %}<link rel="stylesheet" href="{{ ('css/BaseHardware.css') }}">{% endblock %}
<form method="post" class="delete-hardware" {{ path('hardware_delete', {'id': hardware.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hardware.id) }}">
    <a type="button" class="btn btn-secondary" href="{{ path('hardware_index') }}">Back</a>
    <a type="button" class="btn btn-primary" href="{{ path('hardware_edit', {'id': hardware.id}) }}">Edit</a>
    <button class="btn btn btn-danger">Delete</button>
</form>
