{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1>User</h1>
    <table class="table table-striped table-bordered table-list">
        <thead>
        <tr>
            <th><em class="fa fa-cog"></em></th>
            <th>Password</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td align="center">
                    <div class="grid-icon">
                        <a href="{{ path('edit_password', {'id': app.user.id}) }}"><i class="material-icons">edit</i></a>
                    </div>
                </td>
                <td>{{ app.user.password }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

